<h1>Receipt</h1>

<dl>
  <dt>Name</dt>
  <dd><%= @receipt.name %></dd>

  <dt>Store</dt>
  <dd><%= @receipt.store %></dd>

  <dt>Date</dt>
  <dd><%= @receipt.date %></dd>
</dl>

<%= link_to 'Delete',  receipt_path(@receipt),
    data: { confirm: 'Are you sure you want to delete this receipt?' }, method: :delete %>
