<!DOCTYPE html>
<html>
<head>
  <title>Omni Receipts</title>
  <%= render 'shared/imports' %>
</head>
<body>
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
          <!-- Brand -->
          <a class="navbar-brand" href="/">
            <span>
              <img width="32" height="32" src="<%= asset_path('branding.png') %>"/>
              Omni Receipts
            </span>
          </a>

          <!-- Session Button -->
          <button type="button" class="navbar-toggle navbar-right collapsed" data-toggle="collapse" data-target="#profile-menu">
            <img class="img img-rounded" width="32" height="32" src="<%= current_user.image_link %>"/>
          </button>
        </div>

        <!-- Hidden Session Menu -->
        <div class="collapse navbar-collapse navbar-right" id="profile-menu">
          <ul class="nav navbar-nav">
            <li class="nabvar-text" style="padding: 20.5px 0;">Signed in as <%= current_user.name %></li>
            <li class="navbar-link"><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
          </ul>
      </div>
    </div>
  </nav>

  <!-- Body Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8 panel panel-default well">
        <%= yield %>
      </div>
      <div class="col-md-2"</div>
    </div>
  </div>
  <!-- End Body Content -->
</body>
</html>
